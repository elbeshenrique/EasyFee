{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch CalculaJuros",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CalculaJuros/bin/Debug/net5.0/CalculaJuros.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CalculaJuros",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Docker TaxaJuros",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run-taxajuros: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/TaxaJuros/TaxaJuros.csproj"
            }
        },
        {
            "name": "Docker CalculaJuros",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run-calculajuros: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/CalculaJuros/CalculaJuros.csproj"
            }
        }
    ]
}